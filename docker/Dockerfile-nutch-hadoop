FROM openjdk:8-jdk-buster

RUN apt-get update; \
	apt-get install -y --no-install-recommends ant vim openssh-server vim rsync curl build-essential maven \
	rm -rf /var/lib/apt/lists/*;

ARG NUTCH_VERSION
ARG HADOOP_VERSION
ENV HADOOP_VERSION=$HADOOP_VERSION
ENV NUTCH_HOME=/opt/nutch
ENV HADOOP_HOME=/opt/hadoop

# Hadoop install
#RUN wget -qO- "https://downloads.apache.org/hadoop/common/hadoop-${HADOOP_VERSION}/hadoop-${HADOOP_VERSION}.tar.gz" | tar -zx --strip-components=1
ADD docker/hadoop/hadoop-${HADOOP_VERSION}.tar.gz $HADOOP_HOME

# pseudo distributed
COPY docker/hadoop/etc/hadoop $HADOOP_HOME/etc/hadoop
RUN sed s/HOSTNAME/localhost/ $HADOOP_HOME/etc/hadoop/core-site.xml.template > $HADOOP_HOME/etc/hadoop/core-site.xml

#RUN $HADOOP_HOME/bin/hdfs namenode -format

