## Nutch 1.x install
#RUN wget -qO- "https://archive.apache.org/dist/nutch/${NUTCH_VERSION}/apache-nutch-${NUTCH_VERSION}-src.tar.gz" | tar -zx --strip-components=1
ADD docker/nutch/apache-nutch-1.18-src.zip $NUTCH_HOME

COPY docker/nutch $NUTCH_HOME

